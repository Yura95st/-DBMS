@{
    ViewBag.Title = "Index";
}

<h2>Databases</h2>

<div class="input-group">
    <input type="text" class="form-control" placeholder="Type the name of database">
    <span class="input-group-btn">
        <button class="btn btn-success" type="button">Create</button>
    </span>
</div>

<div class="list-group" style="margin: 10px 0 0">
    @foreach (string dbName in ViewBag.dbNames)
    {
        @Html.ActionLink(dbName, "ShowDatabase", "Home", new { dbName }, new { @class = "list-group-item" })
    }
</div>


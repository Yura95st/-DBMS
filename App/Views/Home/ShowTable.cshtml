@using App.ViewModels
@using Domain.Models
@model App.ViewModels.TableViewModel

@{
    ViewBag.Title = $"Table: {Model.Scheme.Name}";
}

<h2>@Model.Scheme.Name</h2>

@{
    TableNavigationPanelViewModel viewModel = new TableNavigationPanelViewModel
    {
        DbName = Model.Scheme.DbName,
        TableName = Model.Scheme.Name
    };

    Html.RenderPartial("TableNavigationPanel", viewModel);
}

<table class="table table-bordered table-striped table-responsive">
    <thead>
    <tr>
        @*<th />*@
        @foreach (var attribute in Model.Scheme.Attributes)
        {
            <th>@attribute.Name</th>
        }
    </tr>
    </thead>
    <tbody>
    @foreach (Row row in Model.Rows)
    {
        <tr>
            @*<td style="text-align: center;">
                <a href="#">edit</a>
                <span style="margin: 0 2px 0;">|</span>
                <a href="#">delete</a>
            </td>*@
            @foreach (string rowValue in row.Value)
            {
                <td>@rowValue</td>
            }
        </tr>
    }
    </tbody>
</table>